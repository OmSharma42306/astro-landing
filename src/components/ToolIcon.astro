---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="tool-icon group relative">
  <img 
    src={icon} 
    alt={name} 
    class="w-12 h-12 transition-transform hover:scale-110"
    loading="lazy"
  />
  <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 bg-gray-800 px-2 py-1 rounded text-sm opacity-0 group-hover:opacity-100 transition-opacity">
    {name}
  </span>
</div>